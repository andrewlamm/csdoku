
<!DOCTYPE html>
<html>
  <%- include('partials/helmet.ejs', {title: 'csdoku'}) %>
  <body>
    <div class="w-full absolute top-0 flex flex-row px-4 py-2 border-b border-white items-center justify-between text-white">
      <div class="text-xl md:text-3xl cursor-pointer" onclick="location.reload()">
        CSDOKU
      </div>
    </div>
    <div class="w-full h-screen flex flex-col items-center justify-center bg-gray-850 px-4">
      <div class="text-2xl md:text-4xl text-white mb-5 text-center">csdoku has moved!</div>
      <div class="text-sm md:text-xl text-white text-center">csdoku has moved to <span onclick="importAndRedirect()" class="cursor-pointer underline">www.csdoku.com</span>! you will be redirected in 10 seconds.</div>
      <div class="text-sm md:text-xl text-white mb-5 text-center">please let the site redirect you or click on the button below before visiting the new url the first time to ensure that your data is properly migrated</div>
      <div class="rounded-lg bg-blue-500 text-center p-2 font-bold cursor-pointer" onclick="importAndRedirect()">
        take me to the new site!
      </div>
    </div>
    <script>
      const newDomain = "https://www.csdoku.com"

      async function importAndRedirect() {
        const localStorageData = { ...localStorage };
        const dataKey = (await (await fetch('/import', {
          method: 'POST',
          credentials: 'include',
          headers: new Headers({
            'Content-Type': 'application/json'
          }),
          body: JSON.stringify({ localStorageData })
        })).json()).key

        if (dataKey === undefined) {
          window.location.href = `${newDomain}`
        }
        else {
          window.location.href = `${newDomain}/migrateLocalStorage?key=${dataKey}`
        }
      }

      setTimeout(sendHome, 10000)
      function sendHome() {
        importAndRedirect()
      }
    </script>
  </body>
</html>
