<!DOCTYPE html>
<html>
  <%- include('partials/helmet.ejs', {title: 'csgodoku - generating infinite puzzle'}) %>
  <body>
    <div class="w-full absolute top-0 flex flex-row px-4 py-2 border-b border-white items-center justify-between text-white">
      <div class="text-xl md:text-3xl cursor-pointer">
        <a href="/" class="w-full h-full">CSGODOKU</a> - infinite mode
      </div>
      <div class="flex flex-row">
        <!-- <div class="flex flex-col">
          <div class="font-bold" id="next-puzzle-timer"></div>
          <div class="font-semibold">until next puzzle</div>
        </div> -->
        <div class="text-base md:text-xl cursor-pointer">
          <a href="/" class="w-full h-full">back to original</a>
        </div>
      </div>
    </div>
    <div class="w-full h-screen flex flex-col items-center justify-center bg-gray-850">
      <div class="text-2xl md:text-4xl text-white">generating a puzzle...</div>
      <div class="text-xl md:text-3xl text-white">please wait</div>
      <div class="text-sm md:text-xl text-white">this may take a while!</div>
    </div>
    <script>
      async function generatePuzzle() {
        const res = await (await fetch('/generateInfinite', {
          method: 'POST',
        })).json()

        window.location.href = `/infinite?id=${res.id}`
      }

      generatePuzzle()
    </script>
  </body>
</html>
